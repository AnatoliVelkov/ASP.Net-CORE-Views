@model AdFinityCRM.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-primary">Продукти</h1>
<hr />

<h4>Изтриване на продукт</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2 font-weight-bold mb-2">
            Име:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2 font-weight-bold mb-2">
            Артикулен номер:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArticleNumber)
        </dd>
        <dt class="col-sm-2 font-weight-bold mb-2">
            Категория:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="col-sm-2 font-weight-bold mb-2">
            Мерна единица:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unit)
        </dd>
        <dt class="col-sm-2 font-weight-bold mb-2">
            Единична цена:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PriceForUnit)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </form>
</div>
